<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Process"
    android:orientation="vertical"
    android:paddingTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ HỌC VỤ"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/btnLichsulophoc"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Lịch sử lớp học"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:textSize="10sp"
            android:background="@drawable/botron_button"
            android:layout_marginRight="10dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/btnLophocsapdienra"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Lớp học sắp diễn ra"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:background="@drawable/botron_button"
            android:gravity="center"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/spSapxep"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:popupBackground="#838380"
        android:spinnerMode="dropdown" />

    <ListView
        android:id="@+id/lvHienThiLopHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:divider="@color/white"
        android:dividerHeight="10sp"
        android:layout_weight="1"
        android:layout_margin="15dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#2196F3"
        app:menu="@menu/bottom_nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>