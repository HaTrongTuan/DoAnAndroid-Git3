<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/botron_button"
    android:backgroundTint="@color/white"
    android:elevation="4dp">
    <ImageButton
        android:id="@+id/imbBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/out"
        android:background="#00FFFFFF"
        android:layout_gravity="right"/>

    <TextView
        android:text="Lựa chọn thời gian đăng ký"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/container"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDay"
            android:text="Thứ 3, Ngày 09/10/2021"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/radTime"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radTime1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="9:00"
                android:button="@android:color/transparent"
                android:background="@drawable/radio_selecter"
                android:gravity="center"
                android:textColor="@drawable/text_color"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radTime2"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textSize="18sp"
                android:button="@android:color/transparent"
                android:background="@drawable/radio_selecter"
                android:gravity="center"
                android:textColor="@drawable/text_color"/>

            <RadioButton
                android:id="@+id/radTime3"
                android:layout_marginStart="15dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="16:00"
                android:textSize="18sp"
                android:button="@android:color/transparent"
                android:background="@drawable/radio_selecter"
                android:gravity="center"
                android:textColor="@drawable/text_color"/>

        </RadioGroup>
    </LinearLayout>
    <TextView
        android:id="@+id/txtDieuKien"
        android:text="Bạn hãy chọn thời gian phù hợp để tiếp tục đăng ký"
        android:textColor="#CCCCCC"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnDangKyTime"
        android:layout_gravity="center"
        android:background="@drawable/botron_button"
        app:backgroundTint="@null"
        android:text="ĐĂNG KÝ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>