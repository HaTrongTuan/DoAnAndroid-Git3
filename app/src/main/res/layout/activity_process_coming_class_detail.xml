<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Process_coming_Class_Detail"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageButton
            android:id="@+id/imbBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_back"
            android:background="@null"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LỚP HỌC SẮP DIỄN RA"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>
    <TextView
        android:id="@+id/txtNgayUpdate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Ngày 15/12/2021"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="#03A9F4"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Link tham gia"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#03A9F4"/>
        <TextView
            android:id="@+id/txtLinkLopHoc"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="https://www.zoom.us/j/81865093772"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#3E4CAF50"
            android:layout_gravity="center"
            android:autoLink="web"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="ID"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#03A9F4"/>
        <TextView
            android:id="@+id/txtIdZoom"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="68597465568"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#3E4CAF50"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#03A9F4"/>
        <TextView
            android:id="@+id/txtPassZoom"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="lksjaldsjalksdajl"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#3E4CAF50"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Tài liệu"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#03A9F4"/>
        <TextView
            android:id="@+id/txtTaiLieuSapHoc"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="https://drive.google.com/drive/folders/1mG9dqiqZ2OuF33b2X"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#3E4CAF50"
            android:layout_gravity="center"
            android:autoLink="web"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnHuyLopHoc"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hủy"
        app:backgroundTint="@null"
        android:background="@drawable/botron_button"
        android:backgroundTint="#FB1605"
        android:layout_marginTop="10dp" />



</LinearLayout>